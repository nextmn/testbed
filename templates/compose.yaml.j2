  {{ container_s(name='chf', image='louisroyer/dev-free5gc-chf', restart='always') }}
    depends_on:
      nrf: # required to being able to deregister propertly
        condition: service_started
      webconsole:
        condition: service_started
    environment:
      GIN_MODE: "release"
      MONGO_HOST: "mongodb.db"
      SBI_REGISTER_IP: "chf.sbi"
      SBI_BINDING_IP: "{{ ipv4('chf', 'sbi') }}"
      SBI_BINDING_PORT: "8000"
      NRF: "nrf.sbi:8000"
      NRF_PEM: "{{ openssl_secret_pem('nrf', 'sbi') }}"
